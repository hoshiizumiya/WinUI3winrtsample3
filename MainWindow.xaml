<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="WinUI3App1C__.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:WinUI3App1C__"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    mc:Ignorable="d">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button
                Width="auto"
                Content="Files"
                FontFamily="Ubuntu Mono" />
            <Button
                Width="auto"
                Content="Button"
                FontFamily="Ubuntu Mono" />
            <Button
                Width="auto"
                Content="Settings"
                FontFamily="Ubuntu Mono" />
            <Button
                Width="auto"
                Content="Settings"
                FontFamily="Ubuntu Mono" />
            <Button
                Width="auto"
                Content="Settings"
                FontFamily="Ubuntu Mono" />
            <Button
                Width="auto"
                Content="Settings"
                FontFamily="Ubuntu Mono" />
        </StackPanel>

        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Left"
            Orientation="Horizontal">
            <Button Content="right" FontFamily="Ubuntu Mono" />
            <Button Content="right" FontFamily="Ubuntu Mono" />
            <Button Content="right" FontFamily="Ubuntu Mono" />
            <Button Content="right" FontFamily="Ubuntu Mono" />
            <Button Content="right" FontFamily="Ubuntu Mono" />
        </StackPanel>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80" />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <StackPanel>
                <Button
                    x:Name="A"
                    Height="auto"
                    Content="第一列" />
                <Button Height="auto" Content="第一列" />
                <Button Height="auto" Content="第一列" />
                <Button Height="auto" Content="第一列" />
                <Button Height="auto" Content="第一列" />
            </StackPanel>
            <StackPanel
                Grid.Column="1"
                Padding="12"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="White"
                BorderThickness="0,0,1,0"
                Orientation="Vertical">
                <ComboBox x:Name="manualList" Header="Manual List" />
                <Button
                    x:Name="addManualListButton"
                    Margin="0,10,0,0"
                    Click="addManualListButton_Click"
                    Content="Add Item" />
            </StackPanel>
            <StackPanel
                Grid.Column="2"
                Padding="12"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="White"
                BorderThickness="0,0,1,0"
                Orientation="Horizontal">
                <ComboBox x:Name="sourceList" Header="ItemsSource List" />
                <Button
                    x:Name="addSourceItemButton"
                    Margin="0,10,0,0"
                    Click="addSourceItemButton_Click"
                    Content="Add Item" />
            </StackPanel>
            <!--<TextBlock x:Name="FirstBlock">This is TextBlock area<LineBreak></LineBreak>sss</TextBlock>-->
            <StackPanel
                Grid.Column="3"
                Padding="12"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="White"
                BorderThickness="0,0,1,0"
                Orientation="Vertical">
                <ComboBox
                    x:Name="boundList"
                    Width="200"
                    Header="Bound List"
                    ItemsSource="{x:Bind collection}" />
                <Button
                    x:Name="addBoundListButton"
                    Margin="0,10,0,0"
                    Click="addBoundListButton_Click"
                    Content="Add Item" />

            </StackPanel>
            <!--<TextBox
                Grid.Row="0"
                Grid.Column="1"
                TextWrapping="Wrap" />-->

        </Grid>

        <Grid Grid.Row="3" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="Button" />
            <Button Grid.Column="1" Content="Button" />
            <Button Grid.Column="2" Content="Button" />
        </Grid>

    </Grid>

</Window>
